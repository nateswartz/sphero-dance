<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/play_checkup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:background="#1a8e1a"
        android:elevation="0dp"
        android:src="@drawable/docmcstuffins" />

    <ImageButton
        android:id="@+id/play_daniel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:background="#01AAEB"
        android:src="@drawable/daniel_tiger" />

    <ImageButton
        android:id="@+id/play_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:background="#5d1a5f"
        android:src="@drawable/head_shoulders_knees_toes" />

    <ImageButton
        android:id="@+id/play_spider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:background="#dc6d0c"
        android:src="@drawable/itsybitsyspider" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:columnCount="2"
        android:paddingTop="5dp"
        android:rowCount="2">

        <Button
            android:id="@+id/spin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:padding="5dp"
            android:text="Spin" />

        <ToggleButton
            android:id="@+id/back_led_toggle"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:padding="5dp"
            android:text="ToggleButton" />

        <Button
            android:id="@+id/run_macro"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:padding="5dp"
            android:text="Run Macro" />

        <Button
            android:id="@+id/align_button"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:padding="5dp"
            android:text="Align" />
    </GridLayout>

</LinearLayout>